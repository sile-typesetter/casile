#!@ZSH@
set -e

src=$1
dir=$2

echo -e "# Summary\n\n"

i=0
of=00.md

function trunc() {
  : > $1
}

trunc $dir/$of

@PANDOC@ $src \
  --markdown-headings=atx \
  --wrap=none \
  --reference-location=section \
  --to=commonmark_x-smart \
  --lua-filter=$CASILEDIR/pandoc-filters/strip_for_mdbook.lua |
while read line; do
  unset title slug
  # Check for chapter header
  if [[ $line =~ "^# .*" ]]; then
    [[ $line =~ ".*unnumbered.*" ]] || let i=$i+1
    @PANDOC@ --to=plain-smart <<< "$line" |
      read title
    test -n "$title"
    # https://github.com/jgm/pandoc/issues/8003
    @PANDOC@ -f markdown+ascii_identifiers -t markdown-auto_identifiers <<< "# ${title//Ä±/i}" |
      @PERL@ -pne 's/^.*{.*#([-\w]+).*}/\1/' |
      read slug
    test -n "$slug"
    of="$(printf %02d $i)-$slug.md"
    trunc $dir/$of
    echo "[$title](./$of)"
  fi
  >> $dir/$of <<< $line
done
